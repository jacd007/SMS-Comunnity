<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.WriteSMSActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D1D1D1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llw1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp">
                <TextView
                    android:id="@+id/tv_w_contacts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minLines="1"
                    android:maxLines="5"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:text="Not contacts"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_view_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llw2"
            android:layout_below="@id/llw1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".60">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_round_edittext">
                    <EditText
                        android:id="@+id/et_w_message"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:minLines="5"
                        android:gravity="top"
                        android:padding="5dp"
                        android:hint="Escribe el mensaje aquÃ­..."/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llw3"
            android:layout_below="@id/llw2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                android:visibility="invisible"
                android:elevation="4dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary">

                    <Button
                        android:id="@+id/btn_send"
                        android:background="@color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:text="Enviar Mensaje"/>

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_baseline_send_24"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>